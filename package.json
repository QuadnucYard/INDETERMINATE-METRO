{
  "name": "indeterminate-metro",
  "private": true,
  "scripts": {
    "fmt": "biome format --write packages",
    "lint": "biome lint --write packages",
    "check": "biome check --write packages",
    "process-ridership": "cd ./packages/ridership && bun run process-ridership",
    "generate-preview-ir": "cd ./packages/resolve && bun run generate-ir",
    "dev:frontend": "cd ./packages/preview && bun dev",
    "build:frontend": "cd ./packages/preview && bun run build",
    "preview:frontend": "cd ./packages/preview && bun preview"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
