{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "linter": {
    "includes": ["**", "!*.jsx", "!**/dist/**"],
    "rules": {
      "complexity": {
        "useLiteralKeys": "off"
      },
      "suspicious": { "noAssignInExpressions": "off" }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100,
    "includes": ["**", "!**/public/*.json", "!**/dist/**"],
    "formatWithErrors": true
  }
}
